<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/background_bluish"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Mode"
            android:textColor="@color/semi_white"
            android:textSize="14sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/standard_mode_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/mode_selector"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Standard"
                android:textColor="@color/white"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/trueFalse_mode_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mode_selector"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="True/False"
                android:textColor="@color/white"
                android:textSize="14sp" />

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Level"

            android:textColor="@color/semi_white" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/lvl1_btn"
                style="@style/startMenuElement"
                android:text="1" />

        <TextView
                android:id="@+id/lvl2_btn"
                style="@style/startMenuElement"
                android:text="2" />

        <TextView
                android:id="@+id/lvl3_btn"
                style="@style/startMenuElement"
                android:text="3" />

        <TextView
                android:id="@+id/lvl4_btn"
                style="@style/startMenuElement"
                android:text="4" />

        <TextView
                android:id="@+id/lvl5_btn"
                style="@style/startMenuElement"
                android:text="5" />

        <TextView
                android:id="@+id/lvl6_btn"
                style="@style/startMenuElement"
                android:text="6" />

        <TextView
                android:id="@+id/lvl7_btn"
                style="@style/startMenuElement"
                android:text="7" />

        <TextView
                android:id="@+id/lvl8_btn"
                style="@style/startMenuElement"
                android:text="8" />
    </LinearLayout>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Speed"
            android:textColor="@color/semi_white" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
                android:id="@+id/speedX1_btn"
                style="@style/startMenuElement"
                android:layout_marginEnd="32dp"
                android:text="x1" />

        <TextView
                android:id="@+id/speedX2_btn"
                style="@style/startMenuElement"
                android:layout_marginEnd="32dp"
                android:text="x2" />

        <TextView
                android:id="@+id/speedX4_btn"
                style="@style/startMenuElement"
                android:text="x4" />
    </LinearLayout>


</LinearLayout>
