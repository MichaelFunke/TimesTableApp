        <LinearLayout
                android:id="@+id/standard_mode_controllers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="16dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="start"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/cheat_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="16dp"
                            android:onClick="@{()->viewModel.onCheatBtn()}"
                            app:srcCompat="@drawable/cheat_btn_0" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:orientation="horizontal">

                    <ru.mapublish.multiplicationtable.views.TimerView
                            android:id="@+id/timerView"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                    <EditText
                            android:id="@+id/et"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/et_round_corners"
                            android:focusable="false"
                            android:text="@={viewModel.textObservable}" />


                    <ImageView
                            android:id="@+id/sendAnswer"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:onClick="@{()->viewModel.validateAnswer('S')}"
                            app:srcCompat="@drawable/send_answer_selector" />
                </LinearLayout>
            </LinearLayout>

            <include
                    android:id="@+id/keyboard"
                    layout="@layout/keyboard_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="64dp"
                    android:gravity="center"
                    app:keyListener="@{viewModel.onKeyClick}" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/trueFalse_mode_controllers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

