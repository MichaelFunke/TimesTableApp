                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/truefalse_controllers"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.validateAnswer('F')}"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="FALSE"
                    android:textColor="@color/background_bluish"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            <ru.mapublish.multiplicationtable.views.TimerView
                    android:id="@+id/timerView_trueFalse_mode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" />

