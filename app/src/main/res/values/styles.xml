<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="boxTheme" parent="AppTheme">
        <item name="android:background">@drawable/tv_rounded_corners_blue</item>
        <item name="android:textSize">@dimen/boxTextSize</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_width">@dimen/boxDimen</item>
        <item name="android:layout_height">@dimen/boxDimen</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="keyboardTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/boxTextSize</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_width">@dimen/boxDimen</item>
        <item name="android:layout_height">@dimen/boxDimen</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/tv_rounded_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/background_bluish</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="startMenuElement" parent="AppTheme">
        <item name="android:background">@drawable/level_btn_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/level_box_text_size</item>
        <item name="android:layout_width">@dimen/level_box</item>
        <item name="android:layout_height">@dimen/level_box</item>
    </style>


</resources>
